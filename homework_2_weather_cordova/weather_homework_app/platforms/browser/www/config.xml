<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.weatherapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WeatherApp</name>
    <description>
        A simple weather app with Apache Cordova, React and OpenWeatherMap API.
    </description>
    <author email="" href="https://github.com/OleksandrGudenko/web-interfaces-homework/tree/master/homework_2_weather_cordova/weather_homework_app">
        OleksandrGudenko
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
